{
    "appname":"catalog",
    "title":"Earth-MGMT Catalog",
    "elements":[
        {
            "id":"top",
            "widget":"MasterMenu",
            "browserview":{
                "width":"100%",
                "height":"4%"
            }
        },
        {
            "id":"left",
            "widget":"Container",
            "browserview":{
                    "width":"15%",
                    "height":"96%"
                },
            "children":[
                {
                    "id":"menu",
                    "browserview":{"width":"100%","height":"100%"},
                    "widget":"MenuTree",
                    "reloadable":true,
                    "datasource":["tree"]
                }
            ]
        },
        {
            "id":"right",
            "widget":"Container",
            "browserview":{
                    "width":"85%",
                    "height":"96%"
                },
            "children":[
                {
                    "id":"entitymenu",
                    "widget":"EntityMenu"
                },
                {
                    "id":"querybox",
                    "widget":"Select"
                },
                {
                    "id":"dataarea",
                    "widget":"Container",
                    "browserview":{
                        "containermode":"tabs"
                    },
                    "children":[
                        {
                            "id":"results",
                            "widget":"ResultViewer"
                        },
                        {
                            "id":"formview",
                            "widget":"Input"
                        },
                        {
                            "id":"chart",
                            "widget":"C3Viewer",
                            "respondTo":"select",
                            "chart_type":"timeseries-line"
                        },
                        {
                            "id":"map",
                            "widget":"Map"
                        }
                    ]
                }
            ]
        }
    ]
}
